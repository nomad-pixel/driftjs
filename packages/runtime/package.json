{
  "name": "drift-spa",
  "version": "0.1.0",
  "description": "Modern SPA framework with reactivity, JSX, routing & DevTools",
  "keywords": ["spa-framework", "reactivity", "typescript", "jsx", "routing", "performance"],
  "author": "Drift Framework",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nomad-pixel/driftjs.git",
    "directory": "packages/runtime"
  },
  "homepage": "https://github.com/nomad-pixel/driftjs#readme",
  "bugs": {
    "url": "https://github.com/nomad-pixel/driftjs/issues"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./jsx-runtime": {
      "types": "./dist/jsx-runtime.d.ts",
      "import": "./dist/jsx-runtime.js"
    },
    "./jsx-dev-runtime": {
      "types": "./dist/jsx-runtime.d.ts",
      "import": "./dist/jsx-runtime.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts src/jsx-runtime.ts --dts --format esm --sourcemap --out-dir dist",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm build",
    "prepack": "pnpm build"
  },
  "devDependencies": {
    "tsup": "^8.0.1",
    "typescript": "^5.6.3",
    "rimraf": "^6.0.1"
  }
}
